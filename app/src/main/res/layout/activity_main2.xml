
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/forsignupfragment">
    <include
        layout="@layout/toolbar_for_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/lay"/>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_of_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/lay"
    android:padding="10dp"
    android:background="@drawable/buttonshape"
    tools:context="com.example.bikram.gymapp.MainActivity"

    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:id="@+id/loginlayout"
      android:layout_height="wrap_content"
      android:background="@android:drawable/alert_light_frame"
  android:layout_alignParentBottom="true"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="250dp"
    >
      <EditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="USER NAME"
          android:id="@+id/username"
          android:inputType="text"
          android:background="#c1b88f"
          android:textColorHint="#ffffff"
          android:padding="10dp"
          />
      <View
          android:layout_width="wrap_content"
          android:layout_height="1dp"
          android:layout_below="@+id/username"
          android:background="#D3D3D3"
          android:id="@+id/v1"
          />
      <EditText

          android:background="#c1b88f"
          android:padding="10dp"
          android:inputType="textPassword"
          android:id="@+id/password"
          android:layout_below="@+id/v1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="PASSWORD"
          android:textColorHint="#ffffff"/>
  </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginbtn"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#de6262"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:layout_marginRight="10dp"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_above="@+id/logintwitter"
        android:layout_centerHorizontal="true"
        android:text="Sign up"
        android:clickable="true"
        android:onClick="signup"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="90dp"
        android:textColor="#ffffff"

        android:id="@+id/textView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skip login"
        android:layout_marginBottom="18dp"
        android:background="#1da1f2"
        android:textColor="#ffffff"
        android:id="@+id/logintwitter"
        android:onClick="touchtoskiplogin"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />
</RelativeLayout>
</RelativeLayout>