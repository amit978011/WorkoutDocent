
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#FF1B2D"
        android:text="Abs Exercise"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_below="@+id/toolbar"
        android:id="@+id/text"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:id="@+id/stext"
        android:textColor="#F6EBBC"
        android:textSize="20dp"
        android:text="Set:4 rep 12"
        android:gravity="center"
        android:background="#000000"/>

    <WebView
        android:layout_below="@+id/stext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/webview"
        android:layout_above="@+id/malebodybuildersaturdayvideo"></WebView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="video"
        android:id="@+id/malebodybuildersaturdayvideo"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>