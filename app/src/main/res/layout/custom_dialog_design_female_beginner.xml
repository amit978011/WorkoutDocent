<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/layout_monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="20dp"
                android:textSize="25dp"
                android:gravity="center"
                android:text="MONDAY"
                android:id="@+id/febgnrmonday"
                android:textColor="#000000"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />

        <LinearLayout
            android:id="@+id/layout_tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="20dp"
                android:textSize="25dp"
                android:textColor="#000000"
                android:gravity="center"
                android:text="TUESDAY"
                android:id="@+id/febgnrtuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <View
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />

        <LinearLayout
            android:id="@+id/layout_wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000000"
                android:padding="20dp"
                android:textSize="25dp"
                android:gravity="center"
                android:text="WEDNESDAY"
                android:id="@+id/febgnrwednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <View
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_thursday"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="20dp"
            android:textSize="25dp"
            android:gravity="center"
            android:text="THURSDAY"
            android:id="@+id/febgnrthursday"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />
    <LinearLayout
        android:id="@+id/layout_friday"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="20dp"
            android:textSize="25dp"
            android:gravity="center"
            android:text="FRIDAY"
            android:id="@+id/febgnrfriday"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />
    <LinearLayout
        android:id="@+id/layout_saturday"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:padding="20dp"
            android:textSize="25dp"
            android:gravity="center"
            android:text="SATURDAY"
            android:id="@+id/febgnrsaturday"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>